#ifndef UART_H
#define UART_H

#include <iom16.h>
#include <stdio.h>

// 串口初始化
void UART_Init(void);

// 发送一个字节
void UART_Transmit(unsigned char data);

// 接收一个字节（非阻塞）
unsigned char UART_Receive(void);

// 检查是否接收到数据
unsigned char UART_DataAvailable(void);

// 发送字符串
void UART_TransmitString(const char* str);

#endif /* UART_H */