#ifndef ADC_H
#define ADC_H

#include <avr/io.h>
#include <avr/interrupt.h>
#include <stdint.h>

// ADC初始化
void ADC_Init(void);

// 启动连续转换
void ADC_StartContinuousConversion(void);

// 读取指定通道的ADC值（10位）
uint16_t ADC_ReadChannel(uint8_t channel);

// 停止连续转换
void ADC_StopContinuousConversion(void);

// 将ADC值转换为电压值（单位：V）
float ADC_ToVoltage(uint16_t adc_value);

// ADC完成中断服务函数
ISR(ADC_vect);

#endif /* ADC_H */