#ifndef MAIN_H
#define MAIN_H

#define F_CPU 16000000UL

#include <avr/io.h>
#include <util/delay.h>
#include <avr/interrupt.h>

// 数据包结构
typedef struct {
    uint8_t header;     // 帧头 0x55
    uint8_t adc0;       // ADC通道0数据
    uint8_t adc1;       // ADC通道1数据
    uint8_t adc2;       // ADC通道2数据
    uint8_t adc3;       // ADC通道3数据
    uint8_t footer;     // 帧尾 0xFF
} DataPacket;

// 函数声明
void System_Init(void);
void Process_ADC_Data(void);
void Send_Data_Packet(void);

// 全局变量
extern volatile uint16_t ADC_Values[4];
extern volatile uint8_t ADC_Ready;

#endif /* MAIN_H */